<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.yzrj.app.suixinji">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS"/>

    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <!-- 这个权限用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 这个权限用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>


    <uses-permission android:name="android.permission.SET_PROCESS_FOREGROUND"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT"/>

    <application
        android:name="com.yzrj.app.suixinji.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ico"
        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.yzrj.app.suixinji.ui.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.yzrj.app.suixinji.ui.MainActivity02"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.yuukidach.ucount.MainActivity03"
            android:screenOrientation="portrait"
            android:theme="@style/StartWindow"/>
        <activity
            android:name="com.yzrj.app.suixinji.ui.MainActivity04"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.yzrj.app.suixinji.ui.MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.yuukidach.ucount.AddItemActivity"/>
        <activity
            android:name="com.yuukidach.ucount.AddDescription"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name="com.yzrj.app.suixinji.ui.RiJiDataActivity"
            android:screenOrientation="portrait"/>


        <service
            android:name="com.yzrj.app.suixinji.service.FirstService"
            android:enabled="true"
            android:exported="true"
            android:persistent="true">
            <intent-filter android:priority="1000">
                <action android:name="com.yzrj.app.suixinji.FirstService"/>
            </intent-filter>
        </service>
        <service
            android:name="com.yzrj.app.suixinji.service.SecondService"
            android:enabled="true"
            android:exported="true"
            android:persistent="true">
            <intent-filter android:priority="1000">
                <action android:name="com.yzrj.app.suixinji.SecondService"/>
            </intent-filter>
        </service>
        <!--           android:process=":service2"-->

        <service
            android:name="com.yzrj.app.suixinji.service.ThirdService"
            android:enabled="true"
            android:exported="true"/>

        <receiver android:name="com.yzrj.app.suixinji.service.GrayGuardReceiver">
            <intent-filter android:priority="90000">
                <action android:name="com.yzyj.app.GrayGuardReceiver"/>
            </intent-filter>
        </receiver>
        <receiver android:name="com.yzrj.app.suixinji.service.UserPresentReceiver">
            <intent-filter android:priority="90000">
                <action android:name="android.intent.action.USER_PRESENT"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.PACKAGE_RESTARTED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>